<div style="display: flex; flex-wrap: wrap; gap: 20px; justify-content: center; margin-top: 30px;">
<% if @events.empty? %>
  <div style="padding: 20px; background: #fff5f5; border: 1px solid #f5c6cb; border-radius: 8px; color: #721c24; font-weight: bold;">
    No events found.
  </div>
<% end %>

<%= render partial: "events/display", collection: @events, as: :event, locals: { show_controls: false } %>
</div>