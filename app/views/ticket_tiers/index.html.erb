<div style="display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: 80vh; font-family: sans-serif;">
  
  <div style="width: 100%; max-width: 400px; padding: 20px; border: 1px solid #eee; border-radius: 12px; shadow: 0 4px 6px rgba(0,0,0,0.1);">
    
    <%= form_with url: event_bookings_path(@event), method: :post do |f| %>
      <h1 style="text-align: center; color: #333; margin-bottom: 20px;">Select Your Ticket</h1>
      
      <% @ticket_tiers.each do |ticket_tier| %>
        <label style="display: block; cursor: pointer; margin-bottom: 12px; position: relative;">
          <%= f.radio_button :ticket_tier_id, ticket_tier.id, 
              style: "position: absolute; opacity: 0;" %>
          
          <div style="padding: 15px; border: 2px solid #ddd; border-radius: 8px; transition: 0.2s; text-align: center;" 
               onclick="this.parentElement.parentElement.querySelectorAll('label div').forEach(d => d.style.borderColor='#ddd'); this.style.borderColor='#27ae60';">
              <strong style="display: block; font-size: 1.1rem;"><%= ticket_tier.name %></strong>
              <span style="color: #666;"><%= number_to_currency(ticket_tier.price) %></span>
          </div>
        </label>
      <% end %>

      <div style="margin-top: 25px; border-top: 1px solid #eee; padding-top: 20px;">
          <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
              <%= f.label :quantity, "Quantity:", style: "font-weight: bold;" %>
              <%= f.number_field :quantity, value: 1, min: 1, max: 10, 
                  style: "width: 60px; padding: 5px; border: 1px solid #ccc; border-radius: 4px;" %>
          </div>
          
          <%= f.submit "Book Selected Tickets", 
              style: "width: 100%; padding: 12px; background-color: #27ae60; color: white; border: none; border-radius: 6px; font-weight: bold; cursor: pointer; font-size: 1rem;" %>
      </div>
    <% end %>
  </div>
</div>